<script>

var tela = window.document.getElementById("demo");

function noZero(){
    if(tela.innerText=="0"){
    tela.innerText = null;}
}

function dis1(){
    noZero();
tela.innerText += 1;
}
function dis2(){
    noZero();
tela.innerText += 2;
}
function dis3(){
    noZero();
tela.innerText += 3;
}
function dis4(){
    noZero();
tela.innerText += 4;
}
function dis5(){
    noZero();
tela.innerText += 5;
}
function dis6(){
    noZero();
tela.innerText += 6;
}
function dis7(){
    noZero();
tela.innerText += 7;
}
function dis8(){
    noZero();
tela.innerText += 8;
}
function dis9(){
    noZero();
tela.innerText += 9;
}
function dis0(){
    noZero();
tela.innerText += 0;
}
function disadicao(){
tela.innerText += "+"
}
function dissubtracao(){
tela.innerText += "-"
}
function dismultiplicacao(){
tela.innerText += "x"
}
function disdivisao(){
tela.innerText += "รท"
}
function emp(){
tela.innerText = 0;
}
function dispoint(){
tela.innerText += ".";
}
function adicao(a,b){
return a + b;
}
function subtracao(a,b){
return a - b;
}
function multiplicacao(a,b){
return a * b;
}
function divisao(a,b){
return a / b;
}

