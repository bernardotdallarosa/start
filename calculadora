<script>

var tela = window.document.getElementById("demo");
var tela2 = window.document.getElementById("aux");
var tela3 = window.document.getElementById("result")
var valor1 = 0;
var valor2 = 0;
var operador;

function qualValor(){
if(valor1 == 0){valor1 = tela.innerText;}
else if(valor2 == 0){valor2 = tela.innerText;}
}
function transicao(){
tela2.innerText = tela.innerText;
}

function noZero(){
if(tela.innerText=="0"){
tela.innerText = null;}
}

function qualTela(){
if(tela2.innerText == null){tela2.innerText}
else{tela3.innerText}
}

function dis1(){
    noZero();
    if(valor1 == 0){tela2.innerText += 1;}
else{tela3.innerText += 1;}
//tela.innerText += 1;
}
function dis2(){
    noZero();
tela.innerText += 2;
}
function dis3(){
    noZero();
tela.innerText += 3;
}
function dis4(){
    noZero();
tela.innerText += 4;
}
function dis5(){
    noZero();
tela.innerText += 5;
}
function dis6(){
    noZero();
tela.innerText += 6;
}
function dis7(){
    noZero();
tela.innerText += 7;
}
function dis8(){
    noZero();
tela.innerText += 8;
}
function dis9(){
    noZero();
tela.innerText += 9;
}
function dis0(){
    noZero();
tela.innerText += 0;
}
function disadicao(){
    qualValor();
tela.innerText = "0";
operador = 1;
}
function dissubtracao(){
    qualValor();
tela.innerText = "0";
operador = 2;
}
function dismultiplicacao(){
    qualValor();
tela.innerText = "0";
operador = 3;
}
function disdivisao(){
    qualValor();
tela.innerText = "0";
operador = 4;
}
function disporcentagem(){
    qualValor();
tela.innerText = "0";
operador = 5;
}
function disnegativo(){
    noZero();
var temporario = tela.innerText;
tela.innerText = null;
tela.innerText = "-" + temporario;
}
function igual(){
qualValor();
switch(operador){
    case 1: resultado = adicao(valor1, valor2);
    break;
    case 2: resultado = subtracao(valor1, valor2);
    break;
    case 3: resultado = multiplicacao(valor1, valor2);
    break;
    case 4: resultado = divisao(valor1, valor2);
    break;
    case 5: resultado = porcentagem(valor1, valor2);
    break;
}
tela.innerText = resultado;
if(tela.innerText == 0){tela.innerText = "0";}
operador = 0;
}
function emp(){
tela.innerText = "0";
valor1 = 0;
valor2 = 0;
operador = 0;
}
function deletar(){
tela.innerText = tela.innerText.slice(0, -1);
if (tela.innerText == ""){tela.innerText = "0"};
}
function dispoint(){
tela.innerText += ".";
}
function adicao(a,b){
return Number(a) + Number(b);
}
function subtracao(a,b){
return Number(a) - Number(b);
}
function multiplicacao(a,b){
return Number(a) * Number(b);
}
function divisao(a,b){
return Number(a) / Number(b);
}
function porcentagem(a,b){
return Number(a/100) * Number(b);
}

</script>
